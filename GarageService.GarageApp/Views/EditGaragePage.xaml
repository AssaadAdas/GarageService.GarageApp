<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GarageService.GarageApp.Views"
             x:Class="GarageService.GarageApp.Views.EditGaragePage"
             >
    <Grid RowDefinitions="Auto,*">

        <views:TitleView Title="Edit Account"
          SubmitCommand="{Binding SaveCommand}"
          BackCommand="{Binding GoBack}"
          Grid.Row="0"/>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                <!-- Garage Info -->
                <Border Stroke="{DynamicResource BorderColor}"
                 StrokeThickness="1"
                 StrokeShape="RoundRectangle 10"
                 Padding="15"
                 BackgroundColor="{DynamicResource SectionBackgroundColor}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Garage Information" 
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="{DynamicResource SectionHeaderColor}"
                        Margin="0,0,0,5"/>
                        <Label Text="Garage Name *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>
                        <Entry Placeholder="Garage Name" 
                            Text="{Binding GarageName}"
                            Style="{StaticResource FormEntry}"/>
                        <Label Text="Address *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>

                        <Entry Placeholder="Address" 
                        Text="{Binding Address}"
                        Style="{StaticResource FormEntry}"/>

                        <Picker Title="Select Country *"
                         ItemsSource="{Binding Countries}"
                         ItemDisplayBinding="{Binding CountryName}"
                         SelectedItem="{Binding SelectedCountry}"
                         Style="{StaticResource FormPicker}"/>

                        <Picker Title="Select Specialization *"
                         ItemsSource="{Binding specializations}"
                         ItemDisplayBinding="{Binding SpecializationDesc}"
                         SelectedItem="{Binding Selectedspecialization}"
                         Style="{StaticResource FormPicker}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Contact Info -->
                <Border Stroke="{DynamicResource BorderColor}"
                 StrokeThickness="1"
                 StrokeShape="RoundRectangle 10"
                 Padding="15"
                 BackgroundColor="{DynamicResource SectionBackgroundColor}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Contact Information" 
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="{DynamicResource SectionHeaderColor}"
                        Margin="0,0,0,5"/>
                        <Label Text="Email *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>

                        <Entry Placeholder="Email" 
                        Text="{Binding Email}"
                        Keyboard="Email"
                        Style="{StaticResource FormEntry}"/>

                        <Label Text="Ext *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>

                        <Entry Placeholder="Ext" 
                            Text="{Binding PhoneExt}"
                            Keyboard="Telephone"
                            Style="{StaticResource FormEntry}"/>

                        <Label Text="Phone Number *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>

                        <Entry Placeholder="Phone Number" 
                            Text="{Binding PhoneNumber}"
                            Keyboard="Telephone"
                            Style="{StaticResource FormEntry}"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>