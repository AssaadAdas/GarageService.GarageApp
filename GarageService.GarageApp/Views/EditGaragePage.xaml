<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GarageService.GarageApp.Views"
             xmlns:inputs="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:Class="GarageService.GarageApp.Views.EditGaragePage"
             >
    <Grid RowDefinitions="Auto,*">

        <views:TitleView Title="Edit Account"
          SubmitCommand="{Binding SaveCommand}"
          BackCommand="{Binding GoBack}"
          Grid.Row="0"/>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                <!-- Garage Info -->
                <Border Stroke="{DynamicResource BorderColor}"
                 StrokeThickness="1"
                 StrokeShape="RoundRectangle 10"
                 Padding="15"
                 BackgroundColor="{DynamicResource SectionBackgroundColor}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Garage Information" 
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="{DynamicResource SectionHeaderColor}"
                        Margin="0,0,0,5"/>
                        <Label Text="Garage Name *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>
                        <Entry Placeholder="Garage Name" 
                            Text="{Binding GarageName}"
                            Style="{StaticResource FormEntry}"/>
                        <Label Text="Address *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>
                        
                    

                        <Entry Placeholder="Address" 
                        Text="{Binding Address}"
                        Style="{StaticResource FormEntry}"/>


                        <Label Text="Country *" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource LabelTextColor}"/>
                        <inputs:SfComboBox Placeholder="Select Country *"
                                         ItemsSource="{Binding Countries}"
                                         DisplayMemberPath="CountryName"
                                         TextMemberPath="CountryName"
                                         SelectedItem="{Binding SelectedCountry}"
                                         IsFilteringEnabled="True"
                                         IsEditable="True"/>

                        <Label Text="Specialization *" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource LabelTextColor}"/>
                        <inputs:SfComboBox Placeholder="Select Specialization *"
                                         ItemsSource="{Binding specializations}"
                                         DisplayMemberPath="SpecializationDesc"
                                         TextMemberPath="SpecializationDesc"
                                         SelectedItem="{Binding Selectedspecialization}"
                                         IsFilteringEnabled="True"
                                         IsEditable="True"/>

                        <!-- Location Section -->
                        <Label Text="Location *" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource LabelTextColor}"
                               Margin="0,10,0,0"/>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <Entry Placeholder="Coordinates (Lat, Lng)" 
                                   Text="{Binding GarageLocation}"
                                   Style="{StaticResource FormEntry}"
                                   IsReadOnly="True"/>
                            <Button Grid.Column="1"
                                    Text="Select on Map"
                                    Command="{Binding OpenMapCommand}"
                                    BackgroundColor="#3B71CA"
                                    TextColor="White"
                                    CornerRadius="8"
                                    Padding="15,0"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Contact Info -->
                <Border Stroke="{DynamicResource BorderColor}"
                 StrokeThickness="1"
                 StrokeShape="RoundRectangle 10"
                 Padding="15"
                 BackgroundColor="{DynamicResource SectionBackgroundColor}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Contact Information" 
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="{DynamicResource SectionHeaderColor}"
                        Margin="0,0,0,5"/>
                        <Label Text="Email *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>

                        <Entry Placeholder="Email" 
                        Text="{Binding Email}"
                        Keyboard="Email"
                        Style="{StaticResource FormEntry}"/>

                        <Label Text="Ext *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>

                        <Entry Placeholder="Ext" 
                            Text="{Binding PhoneExt}"
                            Keyboard="Telephone"
                            Style="{StaticResource FormEntry}"/>

                        <Label Text="Phone Number *" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource LabelTextColor}"/>

                        <Entry Placeholder="Phone Number" 
                            Text="{Binding PhoneNumber}"
                            Keyboard="Telephone"
                            Style="{StaticResource FormEntry}"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>