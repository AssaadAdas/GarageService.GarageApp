<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GarageService.GarageApp.Views"
             x:Class="GarageService.GarageApp.Views.PremuimPage"
             xmlns:converters="clr-namespace:GarageService.GarageApp.Services"
             x:Name="PageRoot"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#181818}">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="0">
        <!-- Title/Header -->
        <views:TitleView Title="Premium Offers"
                         SubmitCommand="{Binding SubscribeCommand}"
                         BackCommand="{Binding GoBack}"
                         Grid.Row="0"/>

        <!-- Offers List -->
        <ScrollView Grid.Row="1">
            <CollectionView ItemsSource="{Binding PremiumOffers}"
                            EmptyView="No premium offers registered"
                            Margin="0,16,0,16"
                            ItemsUpdatingScrollMode="KeepScrollOffset">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="18"
                               Padding="20"
                               Margin="16,8"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#23272F}"
                               BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                               HasShadow="True">
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="8">
                                <!-- Offer Description -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding PremiumDesc}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#2C3E50, Dark=White}"/>
                                <!-- Price and Currency -->
                                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="6">
                                    <Label Text="{Binding PremiumCost}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light=#27AE60, Dark=#2ECC71}"/>
                                    <Label Text="{Binding Curr.CurrDesc}"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light=#7F8C8D, Dark=#BDC3C7}"/>
                                </HorizontalStackLayout>
                                <!-- Feature/Highlight -->
                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="Best value for your business"
                                       FontSize="13"
                                       TextColor="{AppThemeBinding Light=#2980B9, Dark=#6DD5FA}"
                                       FontAttributes="Italic"/>
                                <!-- Radio Button for selection -->
                                <RadioButton
                                 Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                                 GroupName="PremiumOffersGroup"
                                 IsChecked="{Binding Source={x:Reference PageRoot}, Path=BindingContext.SelectedPremiumOffer, Mode=TwoWay, Converter={StaticResource ReferenceEqualsConverter}, ConverterParameter={Binding .}}"
                                 CheckedChanged="OnOfferCheckedChanged"
                                 VerticalOptions="Center"
                                 HeightRequest="32"
                                 WidthRequest="32"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>


    </Grid>
</ContentPage>