<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GarageService.GarageApp.Views"
             x:Class="GarageService.GarageApp.Views.PremuimPage"
             >
    <Grid RowDefinitions="Auto,*">
        <views:TitleView Title="Premuim Offers"
          SubmitCommand="{Binding SaveCommand}"
          BackCommand="{Binding GoBack}"
          Grid.Row="0"/>
        <ScrollView Grid.Row="1">
            <CollectionView ItemsSource="{Binding PremiumOffers}"   
                                        EmptyView="No PremiumOffer registered">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12"   
                                            Padding="16"  
                                            Margin="0,0,0,10"  
                                            BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                            HasShadow="True">
                            <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                <Label Text="{Binding PremiumDesc}"   
                                                      FontAttributes="Bold"  
                                                      TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                <Label Text="{Binding PremiumCost}"   
                                                      FontAttributes="Bold"  
                                                      TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>

                                <Label Text="{Binding Curr.CurrDesc}"   
                                                      FontAttributes="Bold"  
                                                      TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>