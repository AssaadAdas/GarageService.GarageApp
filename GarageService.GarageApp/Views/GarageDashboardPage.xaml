<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GarageService.GarageApp.Views"
             x:Class="GarageService.GarageApp.Views.GarageDashboardPage"
             >
    <Grid RowDefinitions="Auto,*">
        <views:DashBoardTitle Title="Client DashBoard"
                  SaveCommand="{Binding LogOutCommand}"
                  Grid.Row="0"/>
        <Grid Grid.Row="1" RowDefinitions="Auto,*,Auto" RowSpacing="0">
            <!-- Main Content -->
            <ScrollView Grid.Row="1" Padding="0">
                <!-- Garage Profile Card - Modern Design -->
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Profile Section (90% width) -->
                    <Border Grid.Column="0"
                            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#2D2D2D}"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}"
                            Padding="0"
                            HorizontalOptions="Fill"
                            VerticalOptions="Start"
                            Margin="20,20,0,20">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditProfileCommand}"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout Spacing="16">
                            <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                <Image Source="profile_icon.png"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        Aspect="AspectFit"/>
                                <Label Text="My Profile" 
                                       FontAttributes="Bold" 
                                       FontSize="20"
                                       FontFamily="Medium"
                                       TextColor="{AppThemeBinding Light=#1E293B, Dark=White}"/>
                            </HorizontalStackLayout>

                            <BoxView HeightRequest="1" 
                                     BackgroundColor="{AppThemeBinding Light=#F1F5F9, Dark=#333333}"
                                     HorizontalOptions="Fill"/>

                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                                <!-- Name -->
                                <Label Grid.Row="0" Grid.Column="0"
                                      Text="👤"
                                      FontSize="18"
                                      VerticalOptions="Center"/>
                                <Label Grid.Row="0" Grid.Column="1"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding GarageProfile.GarageName}" FontAttributes="Bold"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <!-- Email -->
                                <Label Grid.Row="1" Grid.Column="0"
                                      Text="✉️"
                                      FontSize="18"
                                      VerticalOptions="Center"/>
                                <Label Grid.Row="1" Grid.Column="1"
                                       Text="{Binding GarageProfile.Email}"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"/>

                                <!-- Phone -->
                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="📞"
                                       FontSize="18"
                                       VerticalOptions="Center"/>
                                <Label Grid.Row="2" Grid.Column="1"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding GarageProfile.PhoneExt}" FontAttributes="Bold"/>
                                            <Span Text=" "/>
                                            <Span Text="{Binding GarageProfile.PhoneNumber}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Grid>
                        </VerticalStackLayout>

                    </Border>

                    <!-- Premium Status Section (auto width, docked to right) -->
                    <Border Grid.Column="1"
                             Stroke="{AppThemeBinding Light=#FFD600, Dark=#FFD600}"
                             StrokeThickness="1"
                             StrokeShape="RoundRectangle 20"
                             BackgroundColor="{AppThemeBinding Light=#FFFDE7, Dark=#333300}"
                             Padding="24"
                             WidthRequest="220"
                             VerticalOptions="Start"
                             Margin="0,20,20,20"
                             Shadow="{StaticResource ShadowMedium}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding PremuimCommand}"/>
                        </Border.GestureRecognizers>
                        <Border.Triggers>
                            <DataTrigger TargetType="Border" 
                                          Binding="{Binding GarageProfile.IsPremium}" 
                                          Value="True">
                                <Setter Property="BackgroundColor" Value="#E0F7FA"/>
                                <Setter Property="Stroke" Value="#00BCD4"/>
                            </DataTrigger>
                        </Border.Triggers>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Premium Status"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    TextColor="#FFD600"/>
                            <!-- Premium content -->
                            <ContentView>
                                <ContentView.Content>
                                    <Grid>
                                        <Grid.Triggers>
                                            <DataTrigger TargetType="Grid" 
                                                         Binding="{Binding GarageProfile.IsPremium}" 
                                                         Value="True">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Grid" 
                                                         Binding="{Binding GarageProfile.IsPremium}" 
                                                         Value="False">
                                                <Setter Property="IsVisible" Value="False"/>
                                            </DataTrigger>
                                        </Grid.Triggers>
                                        <Label Text="Expiry: {Binding GarageProfile.GaragePremiumRegistration.ExpiryDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                               FontSize="14"
                                               TextColor="#009688"/>
                                    </Grid>
                                </ContentView.Content>
                            </ContentView>
                            
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>