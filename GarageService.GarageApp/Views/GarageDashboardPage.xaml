<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GarageService.GarageApp.Views"
             x:Class="GarageService.GarageApp.Views.GarageDashboardPage"
             x:Name="PageRoot"
             >
    <Grid RowDefinitions="Auto,*">
        <views:DashBoardTitle Title="Client DashBoard"
                  SaveCommand="{Binding LogOutCommand}"
                  Grid.Row="0"/>
        <Grid Grid.Row="1" RowDefinitions="Auto,*,Auto" RowSpacing="0">
            <!-- Main Content -->
            <ScrollView Grid.Row="1" Padding="0">
                <VerticalStackLayout Spacing="24" Padding="20,16,20,80">
                    <!-- Garage Profile Card - Modern Design -->
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Profile Section (90% width) -->
                        <Border Grid.Column="0"
                            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#2D2D2D}"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}"
                            Padding="0"
                            HorizontalOptions="Fill"
                            VerticalOptions="Start"
                            Margin="20,20,0,20">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding EditProfileCommand}"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="16">
                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                    <Image Source="profile_icon.png"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        Aspect="AspectFit"/>
                                    <Label Text="My Profile" 
                                       FontAttributes="Bold" 
                                       FontSize="20"
                                       FontFamily="Medium"
                                       TextColor="{AppThemeBinding Light=#1E293B, Dark=White}"/>
                                </HorizontalStackLayout>

                                <BoxView HeightRequest="1" 
                                     BackgroundColor="{AppThemeBinding Light=#F1F5F9, Dark=#333333}"
                                     HorizontalOptions="Fill"/>

                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                                    <!-- Name -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                      Text="👤"
                                      FontSize="18"
                                      VerticalOptions="Center"/>
                                    <Label Grid.Row="0" Grid.Column="1"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding GarageProfile.GarageName}" FontAttributes="Bold"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <!-- Email -->
                                    <Label Grid.Row="1" Grid.Column="0"
                                      Text="✉️"
                                      FontSize="18"
                                      VerticalOptions="Center"/>
                                    <Label Grid.Row="1" Grid.Column="1"
                                       Text="{Binding GarageProfile.Email}"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"/>

                                    <!-- Phone -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                       Text="📞"
                                       FontSize="18"
                                       VerticalOptions="Center"/>
                                    <Label Grid.Row="2" Grid.Column="1"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding GarageProfile.PhoneExt}" FontAttributes="Bold"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding GarageProfile.PhoneNumber}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Grid>
                            </VerticalStackLayout>

                        </Border>

                        <!-- Premium Status Section (auto width, docked to right) -->
                        <Border Grid.Column="1"
                             Stroke="{AppThemeBinding Light=#FFD600, Dark=#FFD600}"
                             StrokeThickness="1"
                             StrokeShape="RoundRectangle 20"
                             BackgroundColor="{AppThemeBinding Light=#FFFDE7, Dark=#333300}"
                             Padding="24"
                             WidthRequest="220"
                             VerticalOptions="Start"
                             Margin="0,20,20,20"
                             Shadow="{StaticResource ShadowMedium}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PremuimCommand}"/>
                            </Border.GestureRecognizers>
                            <Border.Triggers>
                                <DataTrigger TargetType="Border" 
                                          Binding="{Binding GarageProfile.IsPremium}" 
                                          Value="True">
                                    <Setter Property="BackgroundColor" Value="#E0F7FA"/>
                                    <Setter Property="Stroke" Value="#00BCD4"/>
                                </DataTrigger>
                            </Border.Triggers>
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Premium Status"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    TextColor="#FFD600"/>
                                <!-- Premium content -->
                                <ContentView>
                                    <ContentView.Content>
                                        <Grid>
                                            <Grid.Triggers>
                                                <DataTrigger TargetType="Grid" 
                                                         Binding="{Binding GarageProfile.IsPremium}" 
                                                         Value="True">
                                                    <Setter Property="IsVisible" Value="True"/>
                                                </DataTrigger>
                                                <DataTrigger TargetType="Grid" 
                                                         Binding="{Binding GarageProfile.IsPremium}" 
                                                         Value="False">
                                                    <Setter Property="IsVisible" Value="False"/>
                                                </DataTrigger>
                                            </Grid.Triggers>
                                            <Label Text="Expiry: {Binding GarageProfile.GaragePremiumRegistration.ExpiryDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                               FontSize="14"
                                               TextColor="#009688"/>
                                        </Grid>
                                    </ContentView.Content>
                                </ContentView>

                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                        <!-- Search for vehicles -->
                        <Frame   Grid.Column="0"
                          BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"  
                          CornerRadius="16"
                          Padding="20"
                          HasShadow="True"
                          Shadow="{StaticResource ShadowSmall}">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                                    <Label Grid.Row ="0"  Grid.Column="0" Text="Search for Vehicles"   
                                       FontAttributes="Bold"   
                                       FontSize="20"  
                                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                       HorizontalOptions="Start"/>

                                    <Button x:Name="btnAddNew" Grid.Row ="0" Grid.Column="1" Text="+"
                                       CornerRadius="12"
                                       HeightRequest="40"
                                       WidthRequest="40" 
                                       BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                                       TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                                       FontFamily="Medium"
                                       FontSize="20"
                                       HorizontalOptions="End"  
                                       VerticalOptions="Center"
                                       Command="{Binding AddVehicleCommand}"/>
                                    </Grid>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                                    <Entry Grid.Row ="0"  Grid.Column="0" x:Name="ESearch"  Text="{Binding LiscencePlate}" Placeholder="Search" 
                                            Style="{StaticResource FormEntry}"/>
                                    <Button Grid.Row ="0"  Grid.Column="1" x:Name="btnSearch"  Text="🔍"
                                                CornerRadius="12"
                                                HeightRequest="40"
                                                WidthRequest="48" 
                                                BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                                                TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                                                FontFamily="Medium"
                                                FontSize="20"
                                                HorizontalOptions="End"  
                                                VerticalOptions="Center"
                                                Command="{Binding SearchVehicleCommand}"/>
                                    </Grid>
                                <CollectionView ItemsSource="{Binding Vehicles}"   
                                        EmptyView="No vehicles registered">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame CornerRadius="12"   
                                            Padding="16"  
                                            Margin="0,0,0,10"  
                                            BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                            HasShadow="True">
                                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                                    <!-- Simplified row definition -->
                                                    <!-- Left-aligned vehicle info -->
                                                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                                                        <!-- Reduced spacing for better compactness -->
                                                        <Label Text="{Binding VehicleName}"   
                                                      FontAttributes="Bold"  
                                                      TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                                        <Label Text="{Binding LiscencePlate}"   
                                                       FontSize="14"  
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                    </VerticalStackLayout>

                                                    <!-- Right-aligned buttons -->
                                                    <HorizontalStackLayout Grid.Column="1" 
                                                                   VerticalOptions="Center"
                                                                   HorizontalOptions="End"
                                                                   Spacing="12">
                                                        <!-- Reduced spacing between buttons -->
                                                        <Button Text="🔧" 
                                                                Command="{Binding BindingContext.AddServicesCommand, Source={x:Reference PageRoot}}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="Transparent"
                                                                TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                                FontSize="16"
                                                                Padding="0"
                                                                IsEnabled="{Binding IsChecked}"
                                                                HeightRequest="36"
                                                                WidthRequest="36"
                                                                CornerRadius="18"/>
                                                        <Button Text="⚙️" 
                                                                Command="{Binding BindingContext.CheckVehicleCommand, Source={x:Reference PageRoot}}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="Transparent"
                                                                TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                                FontSize="16"
                                                                Padding="0"
                                                                HeightRequest="36"
                                                                WidthRequest="36"
                                                                CornerRadius="18"/>
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>