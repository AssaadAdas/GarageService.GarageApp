<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GarageService.GarageApp.Views"
             x:Class="GarageService.GarageApp.Views.GarageDashboardPage"
             x:Name="PageRoot"
             >

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <views:DashBoardTitle 
            Title="Garage DashBoard"
            SaveCommand="{Binding LogOutCommand}"
            PremuimCommand="{Binding PremuimCommand}"
            GaragePremiumRegistration="{Binding GaragePremiumRegistration}"
            IsPremium="{Binding GarageProfile.IsPremium}"
            Grid.Row="0"/>

        <!-- Main Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*,Auto" RowSpacing="0">
            <ScrollView Grid.Row="1" Padding="0">
                <VerticalStackLayout Spacing="24" Padding="20,16,20,80">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">

                        <!-- Search for vehicles -->
                        <Frame Grid.Column="0"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"  
                               CornerRadius="16"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                                    <Label Grid.Row="0" Grid.Column="0" 
                                           Text="Search for Vehicles"   
                                           FontAttributes="Bold"   
                                           FontSize="20"  
                                           TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                           HorizontalOptions="Start"/>

                                    <Button x:Name="btnAddNew" Grid.Row="0" Grid.Column="1" 
                                            Text="+"
                                            CornerRadius="12"
                                            HeightRequest="40"
                                            WidthRequest="40" 
                                            BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                                            TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                                            FontSize="20"
                                            HorizontalOptions="End"  
                                            VerticalOptions="Center"
                                            Command="{Binding AddVehicleCommand}"/>
                                </Grid>

                                <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                                    <Entry Grid.Row="0" Grid.Column="0" 
                                           x:Name="ESearch"  
                                           Text="{Binding LiscencePlate}" 
                                           Placeholder="Search"/>
                                    <Button Grid.Row="0" Grid.Column="1" 
                                            x:Name="btnSearch"  
                                            Text="ðŸ”"
                                            CornerRadius="12"
                                            HeightRequest="40"
                                            WidthRequest="48" 
                                            BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                                            TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                                            FontSize="20"
                                            HorizontalOptions="End"  
                                            VerticalOptions="Center"
                                            Command="{Binding SearchVehicleCommand}"/>
                                </Grid>

                                <CollectionView ItemsSource="{Binding Vehicles}"   
                                                EmptyView="No vehicles registered">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame CornerRadius="12"   
                                                   Padding="16"  
                                                   Margin="0,0,0,10"  
                                                   BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                                   HasShadow="True">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                                                        <Label FontAttributes="Bold"  
                                                               TextColor="{AppThemeBinding Light=#333333, Dark=White}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding Client.FirstName}" FontAttributes="Bold"/>
                                                                    <Span Text=" " />
                                                                    <Span Text="{Binding Client.LastName}" FontAttributes="Bold"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding LiscencePlate}" FontAttributes="Bold"/>
                                                                    <Span Text=" " />
                                                                    <Span Text="{Binding VehicleName}"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                    </VerticalStackLayout>

                                                    <HorizontalStackLayout Grid.Column="1" 
                                                                           VerticalOptions="Center"
                                                                           HorizontalOptions="End"
                                                                           Spacing="12">
                                                        <Button x:Name="btnServices" 
                                                                Text="ðŸ”§" 
                                                                Command="{Binding BindingContext.AddServicesCommand, Source={x:Reference PageRoot}}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="Transparent"
                                                                TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                                FontSize="16"
                                                                Padding="0"
                                                                HeightRequest="36"
                                                                WidthRequest="36"
                                                                CornerRadius="18"/>
                                                        <Button x:Name="btnChecks" 
                                                                Text="âš™ï¸" 
                                                                Command="{Binding BindingContext.CheckVehicleCommand, Source={x:Reference PageRoot}}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="Transparent"
                                                                TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                                FontSize="16"
                                                                Padding="0"
                                                                HeightRequest="36"
                                                                WidthRequest="36"
                                                                CornerRadius="18"/>
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Notification Card -->
                        <Frame Grid.Column="1"
                               CornerRadius="16"   
                               Padding="20"  
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"  
                               HasShadow="True">
                            <VerticalStackLayout Spacing="12">
                                <Label Text="Upcoming Notifications"   
                                       FontAttributes="Bold"   
                                       FontSize="20"  
                                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>

                                <BoxView HeightRequest="1"   
                                         BackgroundColor="{AppThemeBinding Light=#EEEEEE, Dark=#444444}"  
                                         HorizontalOptions="Fill"/>

                                <CollectionView ItemsSource="{Binding UpcomingVehicleAppointments}" 
                                                SelectionMode="Single"
                                                EmptyView="No upcoming Appointments">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame CornerRadius="12"   
                                                   Padding="16"  
                                                   Margin="0,0,0,10"  
                                                   BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                                   HasShadow="True">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <VerticalStackLayout Grid.Column="0" Spacing="4" HorizontalOptions="Start">
                                                        <Label FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding Vehicle.Client.FirstName}" FontAttributes="Bold"/>
                                                                    <Span Text=" " />
                                                                    <Span Text="{Binding Vehicle.Client.LastName}" FontAttributes="Bold"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>

                                                        <Label FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding Vehicle.VehicleName}" FontAttributes="Bold"/>
                                                                    <Span Text=" " />
                                                                    <Span Text="{Binding Vehicle.LiscencePlate}" FontAttributes="Bold"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label Text="{Binding AppointmentDate}"  
                                                               FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                        <Label Text="{Binding Note}"  
                                                               FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                    </VerticalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>

                    <!-- Garage Profile Card -->
                    <Grid ColumnDefinitions="*,Auto">
                        <Border Grid.Column="0"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#2D2D2D}"
                                StrokeThickness="1"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}"
                                Padding="20"
                                HorizontalOptions="Fill"
                                VerticalOptions="Start"
                                Margin="20,20,0,20">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding EditProfileCommand}"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="16">
                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                    <Label Text="ðŸ‘¤" FontSize="20"/>
                                    <Label Text="My Profile" 
                                           FontAttributes="Bold" 
                                           FontSize="20"
                                           TextColor="{AppThemeBinding Light=#1E293B, Dark=White}"/>
                                </HorizontalStackLayout>

                                <BoxView HeightRequest="1" 
                                         BackgroundColor="{AppThemeBinding Light=#F1F5F9, Dark=#333333}"
                                         HorizontalOptions="Fill"/>

                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="ðŸ‘¤"
                                           FontSize="18"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="0" Grid.Column="1"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding GarageProfile.GarageName}" FontAttributes="Bold"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="âœ‰ï¸"
                                           FontSize="18"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding GarageProfile.Email}"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"/>

                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="ðŸ“ž"
                                           FontSize="18"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Row="2" Grid.Column="1"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding GarageProfile.PhoneExt}" FontAttributes="Bold"/>
                                                <Span Text=" " />
                                                <Span Text="{Binding GarageProfile.PhoneNumber}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Grid>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Tabbed Menu Footer -->
        <Border Grid.Row="2"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                Stroke="{AppThemeBinding Light=#E5E5E5, Dark=#333333}"
                StrokeThickness="1"
                Padding="0"
                HorizontalOptions="Fill">

            <Grid ColumnDefinitions="*,*,*,*" 
                  ColumnSpacing="0"
                  Padding="16,12,16,24"
                  HeightRequest="80">

                <!-- Dashboard Tab -->
                <Border Grid.Column="0"
                        BackgroundColor="Transparent"
                        Padding="8"
                        HorizontalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToDashboardCommand}"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="ðŸ " 
                               FontSize="20"
                               HorizontalOptions="Center"/>
                        <Label Text="Dashboard"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Vehicles Tab -->
                <Border Grid.Column="1"
                        BackgroundColor="Transparent"
                        Padding="8"
                        HorizontalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToVehiclesCommand}"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="ðŸš—" 
                               FontSize="20"
                               HorizontalOptions="Center"/>
                        <Label Text="Vehicles"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Appointments Tab -->
                <Border Grid.Column="2"
                        BackgroundColor="Transparent"
                        Padding="8"
                        HorizontalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToAppointmentsCommand}"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="ðŸ“…" 
                               FontSize="20"
                               HorizontalOptions="Center"/>
                        <Label Text="Appointments"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Settings Tab -->
                <Border Grid.Column="3"
                        BackgroundColor="Transparent"
                        Padding="8"
                        HorizontalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="âš™ï¸" 
                               FontSize="20"
                               HorizontalOptions="Center"/>
                        <Label Text="Settings"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>
    </Grid>
</ContentPage>