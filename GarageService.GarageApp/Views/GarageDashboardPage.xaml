<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:GarageService.GarageApp.Views"
             x:Class="GarageService.GarageApp.Views.GarageDashboardPage"
             x:Name="PageRoot"
             >
    <Grid RowDefinitions="Auto,*">
        <views:DashBoardTitle Title="Garage DashBoard"
                  SaveCommand="{Binding LogOutCommand}"
                  PremuimCommand="{Binding PremuimCommand}"
                  GaragePremiumRegistration="{Binding GaragePremiumRegistration}"
                  IsPremium="{Binding GarageProfile.IsPremium}"
                  Grid.Row="0"/>
        <Grid Grid.Row="1" RowDefinitions="Auto,*,Auto" RowSpacing="0">
            <!-- Main Content -->
            <ScrollView Grid.Row="1" Padding="0">
                <VerticalStackLayout Spacing="24" Padding="20,16,20,80">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                        <!-- Search for vehicles -->
                        <Frame   Grid.Column="0"
                                  BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"  
                                  CornerRadius="16"
                                  Padding="20"
                                  HasShadow="True"
                                  Shadow="{StaticResource ShadowSmall}">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                                    <Label Grid.Row ="0"  Grid.Column="0" Text="Search for Vehicles"   
                                           FontAttributes="Bold"   
                                           FontSize="20"  
                                           TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                           HorizontalOptions="Start"/>

                                    <Button x:Name="btnAddNew" Grid.Row ="0" Grid.Column="1" Text="+"
                                             CornerRadius="12"
                                             HeightRequest="40"
                                             WidthRequest="40" 
                                             BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                                             TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                                             FontFamily="Medium"
                                             FontSize="20"
                                             HorizontalOptions="End"  
                                             VerticalOptions="Center"
                                             Command="{Binding AddVehicleCommand}"/>
                                </Grid>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                                    <Entry Grid.Row ="0"  Grid.Column="0" x:Name="ESearch"  Text="{Binding LiscencePlate}" Placeholder="Search" 
                                       Style="{StaticResource FormEntry}"/>
                                    <Button Grid.Row ="0"  Grid.Column="1" x:Name="btnSearch"  Text="ðŸ”"
                                           CornerRadius="12"
                                           HeightRequest="40"
                                           WidthRequest="48" 
                                           BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                                           TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                                           FontFamily="Medium"
                                           FontSize="20"
                                           HorizontalOptions="End"  
                                           VerticalOptions="Center"
                                           Command="{Binding SearchVehicleCommand}"/>
                                </Grid>
                                <CollectionView ItemsSource="{Binding Vehicles}"   
                                        EmptyView="No vehicles registered">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame CornerRadius="12"   
                                                   Padding="16"  
                                                   Margin="0,0,0,10"  
                                                   BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                                   HasShadow="True">
                                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                                    <!-- Simplified row definition -->
                                                    <!-- Left-aligned vehicle info -->
                                                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                                                        <!-- Reduced spacing for better compactness -->
                                                        <Label FontAttributes="Bold"  
                                                               TextColor="{AppThemeBinding Light=#333333, Dark=White}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding Client.FirstName}" FontAttributes="Bold"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding Client.LastName}" FontAttributes="Bold"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label 
                                                            FontSize="14"  
                                                            TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding LiscencePlate}"    FontAttributes="Bold"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding VehicleName}"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                    </VerticalStackLayout>

                                                    <!-- Right-aligned buttons -->
                                                    <HorizontalStackLayout Grid.Column="1" 
                                                                  VerticalOptions="Center"
                                                                  HorizontalOptions="End"
                                                                  Spacing="12">
                                                        <!-- Reduced spacing between buttons -->
                                                        <Button x:Name="btnServices" Text="ðŸ”§" 
                                                                 Command="{Binding BindingContext.AddServicesCommand, Source={x:Reference PageRoot}}"
                                                                 CommandParameter="{Binding .}"
                                                                 BackgroundColor="Transparent"
                                                                 TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                                 FontSize="16"
                                                                 Padding="0"
                                                                 HeightRequest="36"
                                                                 WidthRequest="36"
                                                                 CornerRadius="18"/>
                                                        <Button x:Name="btnChecks" Text="âš™ï¸" 
                                                                Command="{Binding BindingContext.CheckVehicleCommand, Source={x:Reference PageRoot}}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="Transparent"
                                                                TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                                FontSize="16"
                                                                Padding="0"
                                                                HeightRequest="36"
                                                                WidthRequest="36"
                                                                CornerRadius="18"/>
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                        <!-- Notification Card -->
                        <Frame Grid.Column="1"
                              CornerRadius="16"   
                              Padding="20"  
                              BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"  
                              BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"  
                              HasShadow="True">
                            <VerticalStackLayout Spacing="12">
                                <Label Text="Upcoming Notifications"   
                                       FontAttributes="Bold"   
                                       FontSize="20"  
                                      TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>

                                <BoxView HeightRequest="1"   
                                         BackgroundColor="{AppThemeBinding Light=#EEEEEE, Dark=#444444}"  
                                         HorizontalOptions="Fill"/>

                                <CollectionView ItemsSource="{Binding UpcomingVehicleAppointments}" 
                                                SelectionMode="Single"
                                                EmptyView="No upcoming Appointments">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame CornerRadius="12"   
                                                    Padding="16"  
                                                    Margin="0,0,0,10"  
                                                    BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                                    HasShadow="True">
                                                <Grid ColumnDefinitions="*,Auto" RowSpacing="8">
                                                    <!-- Left-aligned content -->
                                                    <VerticalStackLayout Grid.Column="0" Spacing="4" HorizontalOptions="Start">
                                                        <Label 
                                                               FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding Vehicle.Client.FirstName}" FontAttributes="Bold"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding Vehicle.Client.LastName}" FontAttributes="Bold"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        
                                                        <Label 
                                                               FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding Vehicle.VehicleName}" FontAttributes="Bold"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding Vehicle.LiscencePlate}" FontAttributes="Bold"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label Text="{Binding AppointmentDate}"  
                                                               FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                        <Label Text="{Binding Note}"  
                                                               FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                    </VerticalStackLayout>

                                                    <!-- Right-aligned button -->
                                                    <VerticalStackLayout Grid.Column="1" 
                                                                  VerticalOptions="Center"
                                                                  HorizontalOptions="End"
                                                                  Spacing="8">
                                                    </VerticalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                    <!-- Garage Profile Card - Modern Design -->
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Profile Section (90% width) -->
                        <Border Grid.Column="0"
                            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#2D2D2D}"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}"
                            Padding="0"
                            HorizontalOptions="Fill"
                            VerticalOptions="Start"
                            Margin="20,20,0,20">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding EditProfileCommand}"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="16">
                                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                    <Image Source="profile_icon.png"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        Aspect="AspectFit"/>
                                    <Label Text="My Profile" 
                                       FontAttributes="Bold" 
                                       FontSize="20"
                                       FontFamily="Medium"
                                       TextColor="{AppThemeBinding Light=#1E293B, Dark=White}"/>
                                </HorizontalStackLayout>

                                <BoxView HeightRequest="1" 
                                     BackgroundColor="{AppThemeBinding Light=#F1F5F9, Dark=#333333}"
                                     HorizontalOptions="Fill"/>

                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                                    <!-- Name -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                      Text="ðŸ‘¤"
                                      FontSize="18"
                                      VerticalOptions="Center"/>
                                    <Label Grid.Row="0" Grid.Column="1"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding GarageProfile.GarageName}" FontAttributes="Bold"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <!-- Email -->
                                    <Label Grid.Row="1" Grid.Column="0"
                                      Text="âœ‰ï¸"
                                      FontSize="18"
                                      VerticalOptions="Center"/>
                                    <Label Grid.Row="1" Grid.Column="1"
                                       Text="{Binding GarageProfile.Email}"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"/>

                                    <!-- Phone -->
                                    <Label Grid.Row="2" Grid.Column="0"
                                       Text="ðŸ“ž"
                                       FontSize="18"
                                       VerticalOptions="Center"/>
                                    <Label Grid.Row="2" Grid.Column="1"
                                       FontSize="16"
                                       FontFamily="Regular"
                                       TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding GarageProfile.PhoneExt}" FontAttributes="Bold"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding GarageProfile.PhoneNumber}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Grid>
                            </VerticalStackLayout>

                        </Border>

                      
                    </Grid>
                    
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>