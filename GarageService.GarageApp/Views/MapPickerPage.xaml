<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             x:Class="GarageService.GarageApp.Views.MapPickerPage"
             Title="Select Location">
    
    <Grid RowDefinitions="*,Auto">
        <maps:Map x:Name="locationMap" 
                  Grid.Row="0"
                  MapClicked="OnMapClicked"/>
        
        <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="10" BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
            <Label x:Name="LocationLabel" 
                   Text="Tap on the map to select your garage location" 
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
            
            <Button Text="Confirm Location" 
                    Clicked="OnConfirmClicked"
                    BackgroundColor="#3B71CA"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
