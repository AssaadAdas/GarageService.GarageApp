<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="GarageService.GarageApp.Views.TitleView"
      x:Name="Root"
      ColumnDefinitions="Auto,*,Auto"
      BackgroundColor="{AppThemeBinding Light=#F8FAFC, Dark=#1E293B}"
      Padding="16,12"
      HeightRequest="64">

    <!-- Subtle gradient overlay -->
    <Grid.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{AppThemeBinding Light=#F8FAFC, Dark=#1E293B}" Offset="0"/>
            <GradientStop Color="{AppThemeBinding Light=#EFF6FF, Dark=#0F172A}" Offset="1"/>
        </LinearGradientBrush>
    </Grid.Background>

    <!-- Back Button -->
    <Button Grid.Column="0"
            x:Name="BackButton"
            Text="←"
            Command="{Binding BackCommand, Source={x:Reference Root}}"
            BackgroundColor="{AppThemeBinding Light=#E2E8F0, Dark=#334155}"
            TextColor="{AppThemeBinding Light=#475569, Dark=#E2E8F0}"
            FontSize="20"
            FontAttributes="Bold"
            HeightRequest="44"
            WidthRequest="44"
            CornerRadius="12"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Padding="0">
        <Button.Shadow>
            <Shadow Brush="{AppThemeBinding Light=#64748B, Dark=#000000}" 
                    Offset="0,2" 
                    Radius="4" 
                    Opacity="0.1"/>
        </Button.Shadow>
    </Button>

    <!-- Title with accent underline -->
    <VerticalStackLayout Grid.Column="1" 
                         HorizontalOptions="Center" 
                         VerticalOptions="Center"
                         Spacing="2">
        <Label x:Name="TitleLabel"
               Text="{Binding Title, Source={x:Reference Root}}"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light=#1E293B, Dark=#F1F5F9}"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <BoxView HeightRequest="3"
                 WidthRequest="40"
                 CornerRadius="2"
                 BackgroundColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                 HorizontalOptions="Center"/>
    </VerticalStackLayout>

    <!-- Save/Submit Button -->
    <Button Grid.Column="2"
            x:Name="SaveButton"
            Text="✓"
            Command="{Binding SubmitCommand, Source={x:Reference Root}}"
            BackgroundColor="{AppThemeBinding Light=#10B981, Dark=#059669}"
            TextColor="White"
            FontSize="20"
            FontAttributes="Bold"
            HeightRequest="44"
            WidthRequest="44"
            CornerRadius="12"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Padding="0">
        <Button.Shadow>
            <Shadow Brush="{AppThemeBinding Light=#10B981, Dark=#000000}" 
                    Offset="0,3" 
                    Radius="6" 
                    Opacity="0.25"/>
        </Button.Shadow>
    </Button>
</Grid>
