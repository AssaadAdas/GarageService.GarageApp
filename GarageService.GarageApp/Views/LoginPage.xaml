<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GarageService.GarageApp.ViewModels"
             x:Class="GarageService.GarageApp.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             BackgroundImageSource="garage_bg.png"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout Padding="30,40" Spacing="25">
            <!-- Header Section -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Image Source="garageservicelogo.png" 
                    HeightRequest="120"
                    WidthRequest="120"
                    Aspect="AspectFit"
                    HorizontalOptions="Center"/>

                <Label Text="Welcome" 
                    FontSize="28"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="Black"/>

                <Label Text="Sign in to access your account"
                    FontSize="14"
                    HorizontalOptions="Center"
                    TextColor="Black"/>
            </VerticalStackLayout>

            <!-- Login Form - Using Border instead of Frame for better performance -->
            <Border StrokeShape="RoundRectangle 12"
                    Stroke="#E0E0E0"
                    BackgroundColor="White"
                    Padding="25">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="8" Opacity="0.15"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="20">
                    <!-- Username Field -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username" 
                            FontSize="14"
                            TextColor="#34495E"/>
                        <Entry Text="{Binding Username}" 
                            Placeholder="Enter your username"
                            BackgroundColor="#F8F9FA"
                            TextColor="#2C3E50"
                            HeightRequest="50"/>
                    </VerticalStackLayout>

                    <!-- Password Field -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" 
                            FontSize="14"
                            TextColor="#34495E"/>
                        <Entry Text="{Binding Password}" 
                            Placeholder="Enter your password" 
                            IsPassword="True"
                            BackgroundColor="#F8F9FA"
                            TextColor="#2C3E50"
                            HeightRequest="50"/>
                    </VerticalStackLayout>

                    <!-- Remember Me -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding RememberMe}" 
                              Color="#3498DB"/>
                        <Label Text="Remember me" 
                            VerticalOptions="Center"
                            TextColor="#34495E"/>
                    </HorizontalStackLayout>

                    <!-- Login Button -->
                    <Button Text="Sign In" 
                         Command="{Binding LoginCommand}" 
                         BackgroundColor="#3498DB"
                         TextColor="White"
                         FontAttributes="Bold"
                         FontSize="16"
                         HeightRequest="50"
                         CornerRadius="25"/>
                </VerticalStackLayout>
            </Border>

            <!-- Divider -->
            <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Padding="0,10">
                <BoxView Color="#E0E0E0" 
                      HeightRequest="1" 
                      VerticalOptions="Center"
                      HorizontalOptions="FillAndExpand"/>
                <Label Text="OR" 
                    TextColor="Black"
                    FontSize="12"/>
                <BoxView Color="Black" 
                      HeightRequest="1" 
                      VerticalOptions="Center"
                      HorizontalOptions="FillAndExpand"/>
            </HorizontalStackLayout>

            <!-- Register Section -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Don't have an account?" 
                    TextColor="Black"
                    FontSize="14"/>
                <Button Text="Sign Up" 
                     Command="{Binding RegisterCommand}"
                     TextColor="#3498DB"
                     BackgroundColor="Transparent"
                     FontSize="14"
                     FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>