<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageService.GarageApp.Views.PaymentPage"
             BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#1A1A1A}">

    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="20">

            <!-- Header Section -->
            <Frame BackgroundColor="{AppThemeBinding Light=#3498DB, Dark=#2980B9}"
                   Padding="20"
                   CornerRadius="16"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Label Text="Payment Details"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Complete your payment securely"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Payment Information Card -->
            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2C3E50}"
                   Padding="20"
                   CornerRadius="12"
                   HasShadow="True">
                <VerticalStackLayout Spacing="16">

                    <!-- Order Number -->
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="ðŸ“¦"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Order Number"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#7F8C8D, Dark=#BDC3C7}"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding GaragePaymentOrder.OrderNumber}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2C3E50, Dark=White}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Amount -->
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="ðŸ’°"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        
                            <Label Text="Amount"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#7F8C8D, Dark=#BDC3C7}"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding GaragePaymentOrder.Amount}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2C3E50, Dark=White}"/>
                            <Label Text="{Binding GaragePaymentOrder.Curr.CurrDesc}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2C3E50, Dark=White}"/>
                        
                    </HorizontalStackLayout>

                    <!-- Total Amount -->
                    <BoxView HeightRequest="1" 
                             BackgroundColor="{AppThemeBinding Light=#ECF0F1, Dark=#34495E}"
                             Margin="0,8,0,0"/>

                    <HorizontalStackLayout Spacing="12">
                        <Label Text="ðŸ’³"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        
                            <Label Text="Total Amount"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#7F8C8D, Dark=#BDC3C7}"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Totalamount}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#27AE60, Dark=#2ECC71}"/>
                            <Label Text="{Binding GaragePaymentOrder.Curr.CurrDesc}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2C3E50, Dark=White}"/>

                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <!-- Pay Button -->
            <Button Text="Pay Now" 
                    Command="{Binding SaveCommand}" 
                    BackgroundColor="{AppThemeBinding Light=#27AE60, Dark=#2ECC71}"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="18"
                    HeightRequest="55"
                    CornerRadius="27"
                    Margin="0,10,0,0"
                   />

            <!-- Security Footer -->
            <Label Text="ðŸ”’ Your payment is secure and encrypted"
                   FontSize="12"
                   TextColor="{AppThemeBinding Light=#95A5A6, Dark=#7F8C8D}"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>